{
  "name": "@bumble/chrome-rxjs",
  "version": "0.6.0",
  "description": "RxJS Observables for Chrome API events.",
  "license": "MIT",
  "author": "Jack and Amy Steam <jacksteamdev@gmail.com>",
  "files": [
    "lib/*.js",
    "lib/*.js.map",
    "lib/index.d.ts"
  ],
  "main": "lib/index-cjs.js",
  "module": "lib/index-esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "run-p build:dev",
    "build:dev": "rollup -c --environment NODE_ENV:development",
    "build:production": "rollup -c --environment NODE_ENV:production",
    "build:types": "run-s build:types:compile build:types:move build:types:delete",
    "build:types:compile": "tsc -p tsconfig.d.json",
    "build:types:delete": "rm -rf types",
    "build:types:move": "mv -u types/index.d.ts lib",
    "build:watch": "npm run build:dev -- -w",
    "publish": "npm publish",
    "push": "git push",
    "start": "run-p build:watch",
    "test": "jest",
    "test:all": "jest",
    "test:e2e": "jest e2e",
    "test:quick": "jest --testPathIgnorePatterns=e2e",
    "preversion": "run-s build:production test:all",
    "postversion": "run-s push publish"
  },
  "devDependencies": {
    "@types/chrome": "0.0.81",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.6.8",
    "@types/power-assert": "^1.5.0",
    "@types/puppeteer": "^1.19.0",
    "@types/sinon-chrome": "^2.2.6",
    "chrome-promise": "^3.0.5",
    "delay": "^4.3.0",
    "eslint": "^5.16.0",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "power-assert": "^1.6.1",
    "puppeteer": "^1.19.0",
    "rollup": "^1.17.0",
    "rollup-plugin-chrome-extension": "^0.16.2",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-empty-dir": "^1.0.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-zip": "^0.4.0",
    "sinon-chrome": "^2.3.2",
    "ts-jest": "^24.0.2",
    "tslib": "^1.10.0",
    "typescript": "^3.5.3"
  }
}
